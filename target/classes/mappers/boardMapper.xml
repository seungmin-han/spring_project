<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.inhatc.mapper.BoardMapper">
	<insert id="create" parameterType="com.inhatc.domain.BoardVO">
		INSERT 
			board
		SET
			boardName = #{boardName}
	</insert>
	<update id="update" parameterType="com.inhatc.domain.BoardVO">
		UPDATE
			board
		SET
			boardName = #{boardName}
		WHERE 
			boardSeq = #{boardSeq}
	</update>
	<select id="readAll" resultType="com.inhatc.domain.BoardVO">
		SELECT 
			* 
		FROM
			board
		WHERE 
			boardDelNy = 0
	</select>
	<update id="deleteByUpdate">
		UPDATE
			board
		SET
			boardDelNy = 1 
		WHERE 
			boardSeq = #{boardSeq}
	</update>
</mapper>

